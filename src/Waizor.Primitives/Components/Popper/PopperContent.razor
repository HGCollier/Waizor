@namespace Waizor.Primitives.Components.Internal
@inherits ComponentBase

<div @ref="Ref" style="min-width: max-content; transform: translate(0, -200%); position: fixed; top: 0px; left: 0px; z-index: 99">
    <CascadingValue Value="this">
        <div data-side="@Side.ToString().ToLowerInvariant()" 
             data-align="@Align.ToString().ToLowerInvariant()"
             @attributes="AdditionalAttributes">
            @ChildContent
        </div>
    </CascadingValue>
</div>