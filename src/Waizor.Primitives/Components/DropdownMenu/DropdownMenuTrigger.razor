@namespace Waizor.Primitives.Components
@inherits SlotBase
@{
    RenderFragment trigger = AsChild ? ChildContent(Attributes) :
        @<button type="button" @attributes="Attributes" @ref="elementReference">
            @ChildContent(Attributes)
        </button>;
}

@if (DropdownMenu.HasCustomAnchor)
{
    @trigger
}
else
{
    <MenuAnchor AsChild For="@(() => elementReference)">
        @trigger
    </MenuAnchor>
}