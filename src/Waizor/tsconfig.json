{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noEmit": true,
    "typeRoots": [ "./node_modules/@types", "./Scripts/types" ],

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["Scripts/**/*", "rollup.config.ts"]
}
